{% extends "layout.twig" %}
{% block body %}
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Create New Order</h3>
            </div>
            <form action="/order/add" method="post">
                <input name="clientId"
                       type="hidden"
                       value="{{ clientId }}">
                <div class="card-body">
                    <div class="form-group">
                        <label>Order ID</label>
                        <input name="orderId"
                               type="text"
                               class="form-control"
                               id="exampleInputEmail1"
                               placeholder="Order ID">
                    </div>
                    <div class="form-group">
                        <label>Products Quantity</label>
                        <input name="orderProducts"
                               type="text"
                               class="form-control"
                               id="exampleInputEmail1"
                               placeholder="Products Quantity">
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        <select name="country"
                                class="form-control select2 select2-hidden-accessible"
                                style="width: 100%;"
                                data-select2-id="1"
                                tabindex="-1"
                                aria-hidden="true">
                            <option value="select">-Please select country-</option>
                            {% for country in countries %}
                                <option value="{{ country.name }}">{{ country.name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Total Sum</label>
                        <input name="orderSum"
                               type="text"
                               class="form-control"
                               id="exampleInputEmail1"
                               placeholder="Order Sum">
                    </div>

                    <div class="form-group">
                        <label>Status</label>
                        <select name="status"
                                class="form-control select2 select2-hidden-accessible"
                                style="width: 100%;"
                                data-select2-id="1"
                                tabindex="-1"
                                aria-hidden="true">
                            <option value="select">-Please select status-</option>
                            {% for status in statuses %}
                                <option value="{{ status.name }}">{{ status.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="/client/{{ clientId }}/profile" class="btn btn-default">Cancel</a>
                </div>
            </form>
        </div>
    </div>


{% endblock %}
